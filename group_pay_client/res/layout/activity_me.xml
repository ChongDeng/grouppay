<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <TextView
			        android:id="@+id/textView1"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="Personal account" 
			        android:gravity = "center_horizontal"
			        android:textSize="35px"
			        android:background="#B0C4D2"/>
         
    
    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" >
			    
			         <ImageView android:id="@+id/img1"  
			        android:layout_width="wrap_content" 
			        android:layout_height="wrap_content"  
			        android:layout_margin="5px"
			        android:src="@drawable/money"
			        /> 
			        
			        <TextView
			        android:id="@+id/textView_UserBalance"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="10dp"
			        android:textSize="18sp"
			        android:text="Account Balance: " />
			        
			         <Button
		            android:id="@+id/BalanceRefreshButton"
		            android:layout_width="wrap_content"		            
			        android:layout_height="wrap_content" 
		            android:drawableLeft="@drawable/refresh"
	                android:text="Refresh"
		            android:paddingRight="5dp"
		            android:layout_gravity="center_vertical" ></Button>
			        
     </LinearLayout>
			    
   
	 <TextView
			        android:id="@+id/textViewFundDonate"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="8dp"
			        android:text="Balance Charge" 
			        android:gravity = "center_horizontal"
			        android:textSize="35px"
			        android:background="#B0C4D2"/>
	 
	 <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" >		    
	               
			       		        
			        <TextView
			        android:id="@+id/textView_donate"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="10dp"
			        android:textSize="18sp"
			        android:text="Charge amount: " />
			        
			        <EditText 
		            android:id="@+id/DonateMoneyInput"
					android:text=""		
					android:layout_width="0dp" 
					android:layout_weight="3"
					android:layout_height="wrap_content">   
					      
	                </EditText>
			        
			        <Button
		            android:id="@+id/submitButton"
		             android:layout_width="0dp" 
		             android:layout_weight="1"
			        android:layout_height="wrap_content" 
		            android:text="Submit" 
		            android:layout_gravity="center_vertical" ></Button>
			        
			    </LinearLayout>
			    
	 
	   <TextView
			        android:id="@+id/textViewDonationRemind"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="8dp"
			        android:text="Remind for group donation" 
			        android:gravity = "center_horizontal"
			        android:textSize="35px"
			        android:background="#B0C4D2"/>
	   
	   <TextView
			        android:id="@+id/textViewPaymentHistory"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="8dp"
			        android:text="Past payment history" 
			        android:gravity = "center_horizontal"
			        android:textSize="35px"
			        android:background="#B0C4D2"/>

	
	   
</LinearLayout>
